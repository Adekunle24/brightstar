@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model Aurora.Models.Room

<div class="row no-gutters">
    <div class="col-md-5 p-5 bg-white full-height">
        <div class="login-main-left">
            <div class="text-center mb-5 login-main-left-header pt-4">
                <img src="img/favicon.png" class="img-fluid" alt="LOGO">
                <h5 class="mt-3 mb-3">Delete Room @Html.DisplayFor(model => model.floor)@Html.Raw("0")@Html.DisplayFor(Model => Model.Id)</h5>
            </div>
            @using (Html.BeginForm("Delete", "Room", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.floor)
                    @Html.TextBoxFor(m => m.floor, new { @class = "form-control", type = "number", required = "required" })
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-outline-primary btn-block btn-lg">Submit</button>
                </div>
            }

        </div>
    </div>

</div>